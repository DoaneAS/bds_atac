// general
QC_ONLY=false
PREFIX=ENCSR703KWN_SE
OUTPUT_DIR=out
TMP_DIR=tmp

// cluster general
WALLTIME=72000		// in seconds
NTHREADS=1
MEMORY=8000000000 	// in bytes

// environemt module definition
MODULE_BIO=bwa/0.7.7; samtools/0.1.19; bedtools/2.19.1; ucsc_tools/3.0.9; picard-tools/1.92
MODULE_LANG=java/latest; r/2.15.1

// bwa
NTHREADS_BWA=4
BWA_INDEX_NAME=/mnt/data/annotations/indexes/bwa_indexes/encodeHg19Male/v0.7.7/encodeHg19Male_bwa-0.7.7
BWA_ALN_PARAM=-q 5 -l 32 -k 2
	
// dupe remover
MAPQ_THRESH=30

// peak calling
NTHREADS_RUN_SPP=4
DUPE_REMOVED=true // run_spp.nodups.R for dupe-removed
NREADS=15000000
NPEAK=300000

// IDR
IDR_THRESH=0.02

// signal track
CREATE_WIG=false
CREATE_BEDGRAPH=true
CONVERT_TO_BIGWIG=true
CHROM_SIZES=/srv/scratch/leepc12/data/bwa_index/male.hg19.chrom.sizes
UMAP_DIR=/mnt/data/ENCODE/byDataType/umap/encodeHg19Male/globalmap_k20tok54
SEQ_DIR=/mnt/data/ENCODE/byDataType/sequence/encodeHg19Male

// fastqs
INPUT_FASTQ_REP1_PE1=/srv/scratch/leepc12/data/tf_chipseq_test/ENCSR703KWN/2.1/ENCFF499TRH.fastq.gz
INPUT_FASTQ_REP2_PE1=/srv/scratch/leepc12/data/tf_chipseq_test/ENCSR703KWN/2.2/ENCFF702LEK.fastq.gz

// control fastqs
INPUT_FASTQ_CTL_REP1_PE1=/srv/scratch/leepc12/data/tf_chipseq_test/ENCSR703KWN/Ctl/2.1/ENCFF169TIB.fastq.gz
INPUT_FASTQ_CTL_REP2_PE1=/srv/scratch/leepc12/data/tf_chipseq_test/ENCSR703KWN/Ctl/2.2/ENCFF630PTQ.fastq.gz
